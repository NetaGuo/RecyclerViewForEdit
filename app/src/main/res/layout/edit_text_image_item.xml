<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <view.MonitorSelectionEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:id="@+id/bbs_editText"
        android:textColor="@color/gray_33"
        android:background="@null"
        android:textCursorDrawable="@drawable/bbs_cursor_drawable"
        android:lineSpacingExtra="5dp"
        android:gravity="top"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:textSize="14sp"
        android:visibility="gone" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bbs_Text"
        android:textColor="@color/gray_33"
        android:background="@color/code_inactive"
        android:lineSpacingExtra="5dp"
        android:gravity="top"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="14sp"
        android:visibility="gone"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray"
        android:id="@+id/edit_image_frameLayout"
        android:visibility="gone"
        android:layout_marginBottom="5dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/bbs_editImageView"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:background="@color/gray"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/delete_car"
            android:id="@+id/bbs_deleteImg"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:visibility="gone"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:alpha="0.5"
            android:layout_gravity="bottom"
            android:textCursorDrawable="@drawable/bbs_cursor_drawable"
            android:lineSpacingExtra="5dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:padding="10dp"
            android:textColor="@color/gray_99"
            android:id="@+id/bbs_edit_image_describe"
            android:hint="输入文字描述"
            android:visibility="gone"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray_33"
            android:alpha="0.5"
            android:layout_gravity="bottom"
            android:padding="10dp"
            android:lineSpacingMultiplier="1.2"
            android:textColor="@color/gray_66"
            android:id="@+id/bbs_image_describe"
            android:visibility="gone"/>


    </FrameLayout>


</FrameLayout>